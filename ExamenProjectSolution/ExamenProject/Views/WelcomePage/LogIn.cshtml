@model ExamenProject.Models.ExamenDataModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/StyleSheetforLogIn.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>LogIn</title>
</head>
<body>

    <div>
        <div>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="login">
                    <div class="login-header">
                        <br />

                    </div>
                    <div class="login-form" style="border-radius:3px 6px;color:white">
                        <h3>Username:</h3>
                        <div class="form-group">

                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @*<input type="text" placeholder="Username" /><br>*@
                        <h3>Password:</h3>
                        <div class="form-group">

                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @*<input type="password" placeholder="Password" />*@
                        <br/>

                        <input type="submit" name="submitbutton" value="LogIn" />
                        <input type="submit" name="submitbutton" value="Cancel" />
                        @*<input type="button" value="Login" class="login-button" />*@
                        <br/>
                        @ViewBag.Message
                        @ViewBag.ErrorMessage
                    </div>
                </div>

            }

        </div>

    </div>
</body>
</html>
